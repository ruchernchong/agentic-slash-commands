#!/bin/bash

# Smart commit command that stages changes and creates well-formatted commits

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Check if we're in a git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    echo -e "${RED}Error: Not in a git repository${NC}"
    exit 1
fi

# Show current status
echo -e "${BLUE}ğŸ“Š Current Git Status:${NC}"
git status --short

# Check if there are any changes to commit
if [ -z "$(git status --porcelain)" ]; then
    echo -e "${GREEN}âœ… No changes to commit${NC}"
    exit 0
fi

echo ""
echo -e "${YELLOW}ğŸ“‹ Changes to be committed:${NC}"

# Show staged changes
if [ -n "$(git diff --cached --name-only)" ]; then
    git diff --cached --stat
    echo ""
fi

# Show unstaged changes
if [ -n "$(git diff --name-only)" ]; then
    echo -e "${YELLOW}ğŸ“ Unstaged changes:${NC}"
    git diff --stat
    echo ""
    
    # Ask if user wants to stage all changes
    read -p "Stage all changes? (y/n): " -n 1 -r
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        git add .
        echo -e "${GREEN}âœ… All changes staged${NC}"
    else
        echo "Run 'git add <files>' to stage specific files, then run this command again."
        exit 0
    fi
fi

# Check if there are staged changes to commit
if [ -z "$(git diff --cached --name-only)" ]; then
    echo -e "${RED}No staged changes to commit${NC}"
    exit 0
fi

echo ""
echo -e "${BLUE}ğŸ’­ Commit message:${NC}"

# Generate commit message based on staged changes
COMMIT_MSG=$(git diff --cached --name-only | head -5 | sed 's/.*\///' | tr '\n' ',' | sed 's/,$//' | sed 's/^/Update /')

# Validate commit message
if [ -z "$COMMIT_MSG" ]; then
    echo -e "${RED}Error: Commit message cannot be empty${NC}"
    exit 1
fi

# Create the commit
git commit -m "$COMMIT_MSG"

echo -e "${GREEN}âœ… Commit created successfully!${NC}"
echo ""

# Show the commit
echo -e "${BLUE}ğŸ“ Recent commits:${NC}"
git log --oneline -3